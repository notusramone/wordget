<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hiorion.word.ever"
    android:versionCode="9"
    android:versionName="1.6.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="True"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hiorion.word.ever.MainActivity"
            android:label="@string/title_activity_main" >
 
        </activity>
        <activity
            android:name="com.hiorion.word.ever.WordAddActivity"
            android:label="@string/title_activity_word_add" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.WordDisplayActivity"
            android:label="@string/title_activity_word_display" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.WordEditActivity"
            android:label="@string/title_activity_word_edit" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.LibraryMgnActivity"
            android:label="@string/title_activity_library_mgn" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:theme="@style/myd" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-4k7y212qbbo5epi" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hiorion.word.ever.PrefActivity"
            android:label="@string/title_activity_pref" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.SpeechActivity"
            android:label="@string/title_activity_speech" >
        </activity>
        <activity
            android:name="com.hiorion.word.ever.HelloWorldActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>